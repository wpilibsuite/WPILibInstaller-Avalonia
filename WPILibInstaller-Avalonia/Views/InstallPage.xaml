<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="WPILibInstaller_Avalonia.Views.InstallPage">
  <DockPanel LastChildFill="True">
    <ProgressBar DockPanel.Dock="Top"  Margin="10,10,10,10" Value="{Binding Progress}"/>
    <Button DockPanel.Dock="Bottom" Margin="10,10,10,10" Content="Cancel Installation" Command="{Binding CancelInstall}"/>
    <TextBlock Margin="10,0,10,0" Text="{Binding Text}"/>
  </DockPanel>
</UserControl>
