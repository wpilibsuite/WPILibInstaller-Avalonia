<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="400"
             x:Class="WPILibInstaller.Views.ConfigurationPage"
             xmlns:vm="using:WPILibInstaller.ViewModels"
             x:DataType="vm:ConfigurationPageViewModel">
  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
    <TextBlock Margin="0,0,0,20" FontSize="20" FontWeight="Bold">Select the install mode you would like.</TextBlock>
    <RadioButton FontSize="15" IsChecked="{Binding Model.InstallTools}">Tools Only</RadioButton>
    <RadioButton FontSize="15" IsChecked="{Binding Model.InstallEverything}">Everything</RadioButton>
    <Grid Margin="0, 20, 0, 0">
      <Button HorizontalAlignment="Left" FontSize="15" Command="{Binding InstallLocalUserCommand}" Padding="10">Install for this User</Button>
      <Button HorizontalAlignment="Right" FontSize="15" Padding="10" IsVisible="{Binding CanRunAsAdmin}" Command="{Binding InstallAdminCommand}">Install for all Users</Button>
    </Grid>
  </StackPanel>
</UserControl>
